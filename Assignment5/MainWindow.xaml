        <Label FontSize="15" Margin="10,10,300,350">
            Multimedia Item :
        </Label>

        <ListBox Name="listsB" FontSize="15" Margin="140,10,10,100" ItemsSource="{Binding}" DisplayMemberPath="_title" SelectionChanged="ListsB_SelectionChanged">
